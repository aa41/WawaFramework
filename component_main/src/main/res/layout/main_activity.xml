<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wawa="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_net"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:filterTouchesWhenObscured="true"
        android:text="网络测试" />

    <Button
        android:id="@+id/btn_arouter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:filterTouchesWhenObscured="true"
        android:text="路由测试" />

    <Button
        android:id="@+id/btn_mvp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:filterTouchesWhenObscured="true"
        android:text="mvp测试" />

    <Button
        android:id="@+id/btn_h5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:filterTouchesWhenObscured="true"
        android:text="h5跳转测试" />

    <Button
        android:id="@+id/btn_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:filterTouchesWhenObscured="true"
        android:text="倒计时" />

    <com.duiba.component_base.widget.WawaSeekBar
        android:id="@+id/wawa_countdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#C2E1FF"
        wawa:base_count_down="true"
        wawa:base_default_progress="100"
        wawa:base_progress_style_common="@drawable/base_countdown_progressbar"
        wawa:base_progress_thumb="@null"
        wawa:base_progress_thumbOffset="0dp"
        wawa:base_progressbar_height="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:filterTouchesWhenObscured="true"
            android:text="递增" />

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:filterTouchesWhenObscured="true"
            android:text="重置" />
    </LinearLayout>


    <com.duiba.component_base.widget.WawaSeekBar
        android:id="@+id/wawa_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#C2E1FF"
        wawa:base_count_down="false"
        wawa:base_default_progress="10"
        wawa:base_progress_style_common="@drawable/base_countdown_progressbar"
        wawa:base_progress_thumb="@null"
        wawa:base_progress_thumbOffset="0dp"
        wawa:base_progressbar_height="20dp" />

</LinearLayout>

