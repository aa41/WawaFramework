<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wawa="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="我是动画效果页"
        android:textSize="24sp" />


    <FrameLayout
        android:id="@+id/fl_wrap"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/iv_target"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_snail" />

        <ImageView
            android:id="@+id/iv_source0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/ic_snail" />

        <ImageView
            android:id="@+id/iv_source1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/ic_snail" />

        <ImageView
            android:id="@+id/iv_source2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/ic_snail" />

        <ImageView
            android:id="@+id/iv_source3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/ic_snail" />

        <ImageView
            android:id="@+id/iv_source4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/ic_snail" />

        <ImageView
            android:id="@+id/iv_source5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/ic_snail" />
    </FrameLayout>


    <com.duiba.component_base.widget.WawaSeekBar
        android:id="@+id/wawa_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fl_wrap"
        android:layout_marginTop="10dp"
        android:background="#C2E1FF"
        wawa:base_count_down="false"
        wawa:base_default_progress="0"
        wawa:base_progress_style_common="@drawable/base_score_progressbar"
        wawa:base_progress_thumb_activity="@drawable/base_star_active"
        wawa:base_progress_thumb_common="@drawable/base_star_common"
        wawa:base_progressbar_height="20dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wawa_score"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:filterTouchesWhenObscured="true"
            android:text="start"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:filterTouchesWhenObscured="true"
            android:text="增加"
            android:textSize="16sp" />
    </LinearLayout>


</RelativeLayout>
